---
const { data, title } = Astro.props
console.log(data)
---

<div class="gallery">
  {
    data.map((image) => (
      <div class="img-container">
        <img src={image.url} alt={`${title} ilustration`} />
      </div>
    ))
  }
</div>

<style>
  .gallery {
    display: flex;
    flex-direction: column;
  }
  .gallery::before {
    content: 'Projects';
    width: 100%;
    margin: auto;
    text-align: center;
    margin-bottom: 20px;
    font-size: 50px;
  }
  .img-container {
    width: 300px;
    height: 300px;
    margin: 5px;
  }

  .img-container img {
    width: 100%;
    height: 100%;
    border-radius: 50%;
  }
  @media screen and (min-width: 480px) {
    .gallery {
      flex-direction: row;
      flex-wrap: wrap;
      flex: 2 1;
    }
    .gallery::before {
      display: none;
    }
    .img-container:nth-child(3) {
      overflow: hidden;
      border-top-right-radius: 50%;
    }
    .img-container {
      width: 30%;
      height: 182px;
    }
    .img-container img {
      min-width: 100%;
      max-width: 100%;
      min-height: 100%;
      max-height: 100%;
      object-fit: cover;
      border-radius: 0;
    }
  }
</style>
